{
  "schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.2",
  "body": [
    {
      "type": "ColumnSet",
      "$data": "${lines}",
      "separator": true,
      "columns": [
        {
          "type": "Column",
          "width": "auto",
          "items": [
            {
              "type": "Image",
              "size": "Small",
              "url": "data:image/svg+xml,%0A%3Csvg xmlns='http://www.w3.org/2000/svg' viewBox='20 10 162 162'%3E%3Cpath d='M138.441 96.373c0 23.242-18.857 42.088-42.097 42.088-23.248 0-42.085-18.846-42.085-42.088 0-23.238 18.838-42.08 42.085-42.08 23.24 0 42.097 18.842 42.097 42.08zM96.344 31.15c-36.029 0-65.234 29.203-65.234 65.223 0 36.026 29.205 65.233 65.234 65.233 36.021 0 65.224-29.207 65.224-65.233 0-36.02-29.203-65.223-65.224-65.223z' fill='${colour}'%3E%3C/path%3E %3E%3Cpath d='M16.257 83.205h160.241v26.387H16.257V83.205z' fill='${colour}'%3E%3C/path%3E %3C/svg%3E"
            }
          ]
        },
        {
          "type": "Column",
          "width": "stretch",
          "items": [
            {
              "type": "TextBlock",
              "text": "${name}",
              "horizontalAlignment": "Right",
              "isSubtle": true,
              "wrap": true
            },
            {
              "type": "TextBlock",
              "text": "${status}",
              "horizontalAlignment": "Right",
              "spacing": "None",
              "size": "Medium",
              "color": "accent",
              "wrap": true
            }
          ]
        },
        {
          "type": "Column",
          "width": "auto",
          "items": [
            {
              "type": "ActionSet",
              "actions": [
                {
                  "type": "Action.Submit",
                  "iconUrl": "${favouriteIconSvg}",
                  "data": {
                    "lineId": "${id}",
                    "action": "click"
                  }
                }
              ]
            }
          ]
        }
      ]
    }
  ]
}